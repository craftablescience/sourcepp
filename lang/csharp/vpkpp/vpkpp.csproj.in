      <TargetPath>${TARGET}c${CMAKE_SHARED_LIBRARY_SUFFIX}</TargetPath>
    </ContentWithTargetPath>
  </ItemGroup>

  <ItemGroup>
    <None Remove="vpkpp.csproj.in" />
  </ItemGroup>

</Project>
